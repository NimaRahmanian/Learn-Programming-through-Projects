def convertToCelsius(fahrenheit):
    celsius = (fahrenheit - 32) * (5.0/9.0)
    return celsius
  
def printCelsius(celsius):
    print("The equivalent in Celsius is ", celsius)
  
def convertToFahrenheit(celsius):
    fahrenheit = (celsius * (9.0/5)) + 32
    return fahrenheit
  
def printFarenheit(fahrenheit):
    print("The equivalent in fahrenheit is ", fahrenheit)    

fahrTemp = float(input("Enter degrees in Fahrenheit: "))
celTemp = convertToCelsius(fahrTemp)
printCelsius(celTemp)    

celTemp = float(input("Enter degrees in Celsius: "))
fahrTemp = convertToFahrenheit(celTemp)
printFarenheit(fahrTemp)  
  
