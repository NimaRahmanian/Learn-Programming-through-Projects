#include <iostream>
using namespace std;

int main() {
  double fahrenheit;
  double celsius;
    
  cout << "Enter degrees in Fahrenheit: ";
  cin >> fahrenheit;
  //order of precedence is imprerative
  celsius = (fahrenheit - 32) * (5.0/9.0);
  cout << "The equivalent in Celsius is "
       << celsius << "\n";
    
  cout << "Enter degrees in Celsius: ";
  cin >> celsius;
  fahrenheit = (celsius * 9.0/5.0) + 32;
  cout << "The equivalent in Fahrenheit is "
       << fahrenheit << "\n";
}
